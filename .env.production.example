# Production Environment Configuration
# Copy this file to .env.production and update the values

# Application Port (exposed to host)
APP_PORT=8080

# Database Configuration
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD
DB_NAME=personal_excalidraw
DB_SSLMODE=disable
DB_MAX_CONNS=25
DB_MIN_CONNS=5

# Server Configuration
SERVER_READ_TIMEOUT=30
SERVER_WRITE_TIMEOUT=30

# CORS Configuration
# Use your domain(s) in production, comma-separated
# Examples:
#   Single domain: https://excalidraw.yourdomain.com
#   Multiple domains: https://excalidraw.yourdomain.com,https://draw.yourdomain.com
CORS_ALLOWED_ORIGINS=*

# Logging
# Options: debug, info, warn, error
LOG_LEVEL=info

# Authentication
AUTH_ENABLED=true
# Generate a strong random access key:
# Run: openssl rand -base64 32
ACCESS_KEY=CHANGE_ME_RANDOM_KEY
